<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a5alumno.ejercicio8_fragments.MainActivity"
    android:id="@+id/relativeLayoutMain">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <fragment
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:name="com.example.a5alumno.ejercicio8_fragments.FragmentOne"
           android:id="@+id/fragment_first"
           tools:layout="@layout/first_fragment"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

       <fragment
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:name="com.example.a5alumno.ejercicio8_fragments.SecondFragment"
           android:id="@+id/fragment_second"
           tools:layout="@layout/second_fragment"/>

   </LinearLayout>
</RelativeLayout>
